{
  "name": "@cocreators-ee/apity",
  "description": "A typed fetch client for openapi-typescript with Svelte support",
  "version": "0.0.1",
  "readme": "README.md",
  "engines": {
    "node": ">= 12.0.0",
    "npm": ">= 7.0.0"
  },
  "author": "Cocreators OÃœ",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "browser": "./dist/esm/index.js",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cocreators-ee/apity"
  },
  "keywords": [
    "fetch",
    "client",
    "swagger",
    "typescript",
    "ts",
    "openapi",
    "openapi 3",
    "node",
    "svelte",
    "sveltekit"
  ],
  "bugs": {
    "url": "https://github.com/cocreators-ee/apity/issues"
  },
  "homepage": "https://github.com/cocreators-ee/apity#readme",
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "codecov": "^3.8.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "msw": "^0.35.0",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.0",
    "svelte": "^3.55.1",
    "ts-jest": "^27.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.3",
    "whatwg-fetch": "^3.6.2"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false
  },
  "scripts": {
    "clean": "rimraf './dist'",
    "build": "pnpm run clean && tsc --project tsconfig.json && tsc --project tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "lint": "eslint .",
    "prepare": "pnpm run build",
    "test": "pnpm run build && jest",
    "test:coverage": "pnpm run build && jest --no-cache --coverage && codecov",
    "test:coverage:local": "pnpm run build && jest --no-cache --collectCoverage",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "format": "prettier -w ."
  }
}
